<%- include('partials/header.ejs') %>

<ul class="items-section">
    <h1 class="status-header">list'd</h1>

    <% foundItems.forEach(function(item) { %>
        <% if (item.status == "listed") { %>

            <form action="/change" method="post">
                <div class="item">
                    <div class="item-img-container">
                        <input type="hidden" name="selectedImgContainer" value="<%= item.id %>">
                        <img src="<%= item.img %>" alt="">
                    </div>
                    <div>
                        <label class="item-name-label" for="itemName">item name |</label>
                        <li class="item-name" name="itemName"> <%= item.name %> </li>
                    </div> 
                    <div class="move-to-section">
                        <label class="status-label">move to: </label>
                        <div class="move-to-buttons">
                            <label>closet</label>
                            <input type="checkbox" name="moveCloset" value="closet" onChange="submit()">
                            <label>photo'd</label>
                            <input type="checkbox" name="movePhotod" value="photod" onChange="submit()">
                            <label>delete</label>
                            <input type="checkbox" name="moveDelete" value="delete" onChange="submit()">
                            <input type="hidden" name="moveId" value="<%= item.id %>">
                        </div>
                    </div>
                </div>
            </form>

        <% } %>
        <% }) %>

    </ul>
    <div class="upload-section">
        <button class="upload-button">add new item</button>
    </div>

<%- include('partials/footer.ejs'); %>